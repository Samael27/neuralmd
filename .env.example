# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/neuralmd?schema=public"

# ========================================
# EMBEDDING PROVIDER
# ========================================
# Choose one: ollama | openai | none
EMBEDDING_PROVIDER="ollama"

# --- Ollama (default, free, local) ---
OLLAMA_URL="http://localhost:11434"
OLLAMA_EMBEDDING_MODEL="nomic-embed-text"
# Other models: mxbai-embed-large, all-minilm, snowflake-arctic-embed

# --- OpenAI (cloud, paid) ---
# EMBEDDING_PROVIDER="openai"
# OPENAI_API_KEY="sk-..."
# OPENAI_EMBEDDING_MODEL="text-embedding-3-small"
# Other models: text-embedding-3-large, text-embedding-ada-002

# --- None (disable embeddings, text search only) ---
# EMBEDDING_PROVIDER="none"

# ========================================
# APP
# ========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ========================================
# API Authentication
# ========================================
# Set to "false" to disable API auth (local/dev)
# Set to "true" for VPS self-hosting with protected data
API_AUTH_REQUIRED="false"

# Admin secret for managing API keys (change this!)
ADMIN_SECRET="change-me-in-production"

# Internal token for SSR pages to call the API (server-side only)
# Required when API_AUTH_REQUIRED="true"
# Generate with: openssl rand -hex 32
INTERNAL_API_TOKEN=""

# ========================================
# UI Authentication (Basic Auth)
# ========================================
# Leave empty for public access
# Set both to enable Basic Auth on the web UI
UI_USERNAME=""
UI_PASSWORD=""

# ========================================
# MCP Server
# ========================================
MCP_PORT=3001
MCP_AUTH_TOKEN="your-secret-token"

# ========================================
# Multi-Tenant Mode (SaaS)
# ========================================
# Set to "true" to enable multi-tenant mode
# When enabled:
# - All notes/API keys are scoped to users
# - User authentication is required
# - Plan limits are enforced
MULTI_TENANT="false"

# Stripe for billing (only needed when MULTI_TENANT=true)
# STRIPE_SECRET_KEY=""
# STRIPE_WEBHOOK_SECRET=""
# STRIPE_PRICE_ID_PRO=""
# STRIPE_PRICE_ID_TEAM=""
